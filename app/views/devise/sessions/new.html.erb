<div style="height:40px"></div>
<div style='min-height: 600px;'> 
<div class="container">
<div class="row">
<div class="col-md-3 col-12"></div>
<div class="col-md-3 col-12">
<img src="/images/logo.png" alt="" style="width:100%">
	</div>
<div class="col-md-3 col-12">
   <h1 class="text-center" style="color:#958068;width: 100%">登入</h1>
<hr style="border: 1px solid #958068">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group field">
      <label for="user_name">使用者名稱</label>
      <br />
      <input type="text" value="" name="user[login]" id="user_login"  class="form-control" required placeholder="請輸入姓名" />
		
		
		
    </div>
    <div class="field">
      <label for="user_password">密碼</label>
      <br />
      <input autocomplete="current-password" type="password" name="user[password]" id="user_password" class="form-control" required placeholder="請輸入密碼" />
    </div>
    <div class="field">
      <input name="user[remember_me]" type="hidden" value="0" />
      <input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me" />
      <label for="user_remember_me" style="margin-top:10px">記住我的資訊</label>
    </div>
    <div class="actions">
      <input type="submit" name="commit" value="登入" data-disable-with="登入" class="btn" id="sign_in-btn" />
    </div>
<% end %>

 <a href="/users/sign_up" id="submit-btn">註冊</a>

</div>
<div class="col-md-3 col-12"></div>	
</div>
</div>
</div>

<script>
setTimeout(getname,50);
 function getname(){
 var x = document.getElementsByName("commit");
 x[0].classList.add("btn"); 
 x[0].classList.add("sign_in-btn"); 
 }
 
</script>