<p id="notice"><%= notice %></p>

<div class="container-fluid row">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3 col-md-12">您的收藏
    </h1>

    <div class="row col-md-9">


      <% @books.each do |book| %>
        <div class="col-lg-4 col-sm-6 portfolio-item">
          <div class="card h-100">
            <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
            <div class="card-body">
              <h4 class="card-title">
                <a href="#"><%= book.book_name %></a>
              </h4>
              <p class="card-text"><%= book.summary %></p>
              <p class="card-text"><%= book.categories.pluck('show').join(',') %></p>
              <!--pluck takes the column 'show' from a book's corresponding categories from the category_ids stuff
                join just joins the two items in the array that was returned from pluck('show')-->
              <a class="btn btn-primary" href="/books/<%= book.id %>">目錄</a>
              <a class="btn btn-primary" href="/books/<%= book.id %>">訂閱</a>
            </div>
          </div>
        </div>
      <%end %>

        

      </div>

      <!-- Sidebar Widgets Column -->
      <div class="col-md-3">

        <!-- Search Widget -->
        <div class="card mb-4">
          <h5 class="card-header">搜尋</h5>
          <div class="card-body">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search for...">
              <span class="input-group-btn">
                <button class="btn btn-secondary" type="button">Go!</button>
              </span>
            </div>
          </div>
        </div>

        <!-- Categories Widget -->
        <div class="card my-4">
          <h5 class="card-header">會員功能</h5>
          <div class="card-body">
            <div class="row">
              <div class="col-lg-6">
                <ul class="list-unstyled mb-0">
                  <li>
                    <a href="/books/new">新增作品</a>
                  </li>
                  <li>
                    <a href="/books/?category=horror">編輯使用者資料</a>
                  </li>
                  <li>
                    <a href="/books/?category=romance">編輯訂閱</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <h1 class="mt-4 mb-3 col-md-12">您的作品
    </h1>
    <div class="row col-md-12">

    
      <% @pieces.each do |piece| %>
        <div class="col-lg-4 col-sm-6 portfolio-item">
          <div class="card h-100">
            <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
            <div class="card-body">
              <h4 class="card-title">
                <a href="#"><%= piece.book_name %></a>
              </h4>
              <p class="card-text"><%= piece.summary %></p>
              <a class="btn btn-primary" href="/books/<%= piece.id %>">目錄</a>
              <a class="btn btn-primary" href="/books/<%= piece.id %>">訂閱</a>
              <a class="btn btn-primary" href="/books/<%= piece.id %>/dashboard">編輯</a>
            </div>
          </div>
        </div>
      <%end %> 
  
    <!-- /.row -->
    <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">
          <li class="page-item">
            <a class="page-link" href="#">&larr; Older</a>
          </li>
          <li class="page-item disabled">
            <a class="page-link" href="#">Newer &rarr;</a>
          </li>
        </ul>
  </div>
</div>