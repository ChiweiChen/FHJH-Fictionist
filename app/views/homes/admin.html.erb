<style>
  td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
  }
  tr {
    font-size:150%; 
    border-spacing: 5px;
  }
  table {
    width: 100%;
  }
  
  
</style>
<div class="ucontainer">
    <h3>所有作品</h3>
    
    <div class="row container">
        <table>
            <%@books.each do |book|%>
                <tr>
                    <th><a href="/books/<%=book.id %>"><%= book.book_name %></a></th>
                    <th><a><%=book.get_author%></a></th>
                    <th><%=link_to '刪除作品',book,method: :delete, data: {confirm:'您確定要刪除這本書嗎？'}%></th>
                </tr>
                
            <%end%>

        </table>
    </div>
</div>
    