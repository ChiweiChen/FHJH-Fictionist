    <div class="row">
      <% @todays.each do |book| %>
        <div class="col-sm-3 portfolio-item">
          <div class="card h-100">
            <a href="#"><img class="card-img-top" src=<%=book.get_cover%> alt=""></a>
            <div class="card-body">
              <h4 class="card-title">
                <a href="#"><%= book.book_name %></a>
              </h4>
              <p class="card-text"><%= book.summary %></p>
              <a class="btn btn-primary" href="/books/<%= book.id %>">目錄</a>
              <%if user_signed_in?%>
                <a class="btn btn-primary" href="/books/<%= book.id %>">訂閱</a>
              <%end%>
            </div>
          </div>
        </div>
      <%end%>
    </div>
